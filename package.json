{
  "name": "premier-lg",
  "version": "1.0.0",
  "description": "Premier League Fixtures",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node ./api/index.js",
    "test": "cross-env NODE_ENV=test jest --runInBand  --testTimeout=20000",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "build": "rm -rf ./dist && babel -d ./dist ./api -s",
    "start": "npm run build && node ./dist/index.js",
    "test:coverage": "jest --runInBand --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "verbose": true
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/victorsteven/Premier-League.git"
  },
  "keywords": [
    "NodeJS",
    "API"
  ],
  "author": "@stevensunflash",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/victorsteven/Premier-League/issues"
  },
  "homepage": "https://github.com/victorsteven/Premier-League#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "email-validator": "^2.0.4",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongodb": "^3.5.4",
    "mongoose": "^5.9.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "@babel/preset-env": "^7.8.6",
    "@babel/register": "^7.8.6",
    "@babel/runtime": "^7.8.4",
    "@shelf/jest-mongodb": "^1.1.3",
    "babel-loader": "^8.0.6",
    "coveralls": "^3.0.9",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.20.1",
    "faker": "^4.1.0",
    "jest": "^25.1.0",
    "supertest": "^4.0.2"
  }
}
